<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Preference
        android:id="@+id/developer"
        android:key="developer"
        android:title="开发者"
        android:summary="East Monster"
        android:icon="@drawable/nyancat">
    </Preference>

    <Preference
        android:id="@+id/version_of_app"
        android:key="version"
        android:title="版本"
        android:summary="@string/version">
    </Preference>

    <Preference
        android:id="@+id/github_navigation"
        android:key="github"
        android:title="打开 Github 页面">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/EastMonster/AccountBook"/>
    </Preference>
</PreferenceScreen>